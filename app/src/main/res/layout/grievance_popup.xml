<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="310dp"
    app:cardCornerRadius="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#1E212B">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/subjectEdt"
            android:backgroundTint="@color/white"
            android:hint="Add Subject"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_regular"
            android:layout_gravity="center"
            android:textColorHint="@color/black"
            android:layout_marginTop="20dp"
            android:paddingStart="25dp"
            android:paddingEnd="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/no_border_curve"
            android:textColor="@color/black"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:id="@+id/descriptionEdt"
            android:backgroundTint="@color/white"
            android:hint="Description"
            android:textSize="16sp"
            android:gravity="top"
            android:fontFamily="@font/poppins_regular"
            android:layout_gravity="center"
            android:textColorHint="@color/black"
            android:layout_marginTop="20dp"
            android:paddingStart="25dp"
            android:paddingEnd="15dp"
            android:paddingTop="6dp"
            android:paddingBottom="3dp"
            android:background="@drawable/no_border_curve"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/submitEdt"
            android:backgroundTint="#21B14A"
            android:text="Submit"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:fontFamily="@font/poppins_semi_bold"
            android:layout_gravity="center"
            android:textColorHint="@color/black"
            android:layout_marginTop="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/no_border_curve"
            android:textColor="@color/black"
            tools:ignore="HardcodedText" />

    </LinearLayout>



</androidx.cardview.widget.CardView>